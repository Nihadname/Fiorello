@model LoginVM

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Login</h2>
                            <span>Please login using account details below.</span>
                        </div>
                        <div class="login-form">
                            <form method="post" asp-action="Login">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <input asp-for="EmailOrUserName" placeholder="Email or Username" />
                                <span class="text-danger" asp-validation-for="EmailOrUserName"></span>

                                <input asp-for="Password" placeholder="Password" type="password" />
                                <span class="text-danger" asp-validation-for="Password"></span>

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe" />
                                        <label asp-for="RememberMe">Remember me</label>
                                    </div>
                                    <a asp-action="Register">Don't have an account?</a><br /><br />
                                    <a asp-controller="Account" asp-action="ChangePassword">Change Password</a>

                                    <a asp-action="ForgetPassword">Forget Password</a>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Login start -->


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
