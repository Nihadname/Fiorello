@using WebApplication11.Models
@model Product

@{
    ViewData["Title"] = "DetailBlog Page";
}

    <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-lg-6">
                        <div class="img">
                            <img src="~/img/@Model.Images.FirstOrDefault(s=>s.IsMain==true).Name" class="img-fluid" alt="">
                          
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-text mt-5 mt-lg-0 px-lg-5">
                            <h1>@Model.Name</h1>
                            <p>@Model.Price</p>
                            <h1>@Model.Category.Name</h1>
                            <ul class="list-unstyled">
                        
                       
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>