@model ProductCreateVM
@{
    var categories = ViewBag.Categories;
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Category</h4>
            <p class="card-description">Update category details</p>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Count"></label>
                    <input asp-for="Count" class="form-control" placeholder="Count">
                    <span class="text-danger" asp-validation-for="Count"></span>
                </div>
               
                <div class="form-group">
                    <label asp-for="Photos"></label>
                    <input asp-for="Photos" class="form-control" placeholder="Photos">
                    <span class="text-danger" asp-validation-for="Photos"></span>
                </div>
                <div class="form-group">

                    <select asp-for="CategoryId"asp-items="categories">
                       
                      
                    </select>
                </div>
              
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>