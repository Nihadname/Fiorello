@using WebApplication11.Areas.AdminArea.ViewModels.Slider
@model SliderCreateVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>

            <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="sliderImage"></label>
                    <input asp-for="sliderImage" class="form-control" placeholder="Name">
                    <span asp-validation-for="sliderImage" class="text-danger"></span>
                </div>
                

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}